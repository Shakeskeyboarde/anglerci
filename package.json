{
  "name": "anglerci",
  "description": "A validation-only approach to releasing projects which use NPM and Git.",
  "author": "Chris Ackerman <chris@topher.land>",
  "license": "ISC",
  "version": "1.2.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shakeskeyboarde/anglerci.git"
  },
  "keywords": [
    "build",
    "changelog",
    "commit",
    "distribution",
    "git",
    "npm",
    "github",
    "actions",
    "ci",
    "publish",
    "push",
    "tag",
    "catch",
    "release",
    "repository",
    "validate",
    "validation",
    "semver",
    "package",
    "workspaces",
    "deploy",
    "continuous",
    "integration",
    "version"
  ],
  "files": [
    "lib/**"
  ],
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "anglerci": "lib/main.js",
    "angler": "lib/main.js"
  },
  "main": "package.json",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "test": "rc npm-test -o && npm start -- catch --no-uncommitted-check && npm start -- release --dry-run --no-uncommitted-check",
    "build": "rc npm-build",
    "start": "npm run build && node lib/main.js",
    "modernize": "npx npm-check-updates -i --format group"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^29.2.5",
    "@types/node": "^14.18.36",
    "@types/picomatch": "^2.3.0",
    "@types/semver": "^7.3.13",
    "@types/shell-quote": "^1.7.1",
    "chmodx": "^1.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.31.0",
    "eslint-config-rational": "^2.0.9",
    "jest": "^29.3.1",
    "parallel-rc": "^1.0.12",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^9.5.0",
    "commander": "^9.5.0",
    "cross-spawn": "^7.0.3",
    "picomatch": "^2.3.1",
    "semver": "^7.3.8",
    "shell-quote": "^1.7.4"
  }
}
