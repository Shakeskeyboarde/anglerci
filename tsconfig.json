// Modern code (to be polyfilled) and explicit ambient types.
{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["jest", "node"],
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
